<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HeaderPanel width="600px" height="400px">
		<g:HTMLPanel>
			<div class="modal-header" style="margin-bottom: 15px">
				<g:Anchor ui:field="close" styleName="close">Ã—</g:Anchor>
				<h3>Create Role</h3>
			</div>
		</g:HTMLPanel>
		<g:ResizeLayoutPanel height="100%">
			<g:HTMLPanel>
				<table>
					<tbody>
						<tr>
							<td colspan="2">Name</td>
						</tr>
						<tr>
							<td colspan="2">
								<g:TextBox ui:field="name" width="100%" />
							</td>
						</tr>
					</tbody>
					<tbody>
						<tr>
							<td colspan="2">Description</td>
						</tr>
						<tr>
							<td colspan="2">
								<g:TextArea ui:field="description" width="100%" />
							</td>
						</tr>
					</tbody>
				</table>
			</g:HTMLPanel>
		</g:ResizeLayoutPanel>
		<g:HTMLPanel ui:field="footer" styleName="modal-footer">
			<g:Button ui:field="finish" styleName="btn">Save</g:Button>
			<g:Button ui:field="cancel" styleName="btn">Cancel</g:Button>
		</g:HTMLPanel>
	</g:HeaderPanel>
</ui:UiBinder> 